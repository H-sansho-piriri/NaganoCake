<div class="container">
  <div class="row">
    <h3 class="col-md-5">会員一覧</h2>
  </div>

  <table class="table table-boredered">
    <thead class="bg-light">
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </thead>
    <% @customers.each do |customer| %>
    <tbody>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer) do %>
          <%= customer.last_name %><%= customer.first_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted ? "有効" : "退会済み" %></td>
    </tbody>
    <% end %>
  </table>

</div>
