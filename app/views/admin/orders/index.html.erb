<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
  </div>

  <table class="table cart_products">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
      <td>
        <%= link_to admin_order_path(order) do %>
          <%= order.created_at.to_s(:datetime_jp) %>
        <% end %>
      </td>
      <td><%= order.customer.full_name %></td>
      <td><%= order.order_details.sum(:quantity) %></td>
      <td><%= order.status_i18n %></td>
    </tbody>
    <% end %>
  </table>

</div>
