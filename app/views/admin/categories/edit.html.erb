<main>
  <div class="container">
    <div class="row">
      <h3 class="col-md-5">ジャンル編集</h2>
    </div>

    <br>

    <div class="row">
      <div class="col-md-2">
        ジャンル名
      </div>

      <div class="form-group col-md-2">
        <%= form_with model:@category,url:"/admin/categories/#{@category.id}", local:true do |f| %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="form-group col-md-8">
        <%= f.submit "変更を保存" , class: 'btn btn-success' %>
      </div>
        <% end %>
    </div>

  </div>
</main>