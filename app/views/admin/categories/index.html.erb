<main>
  <div class="container">
    <div class="row">
      <span class="heading">ジャンル一覧・追加</span>
    </div>

    <br>


    <div class="row">
      <div class="col-md-2">
        ジャンル名
      </div>

      <div class="form-group col-md-2">
        <%= form_with model:@category,url:'/admin/categories', local:true do |f| %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="form-group col-md-8">
        <%= f.submit "新規登録" , class: 'btn btn-success' %>
      </div>
        <% end %>
    </div>
    <br>

    <div class="row">
      <div class="col-md-8">
        <table class="categories">
          <tr>
            <th class="col-md-8">ジャンル</th>
            <th class="col-md-4"></th>
          </tr>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to edit_admin_category_path(category.id) do %>
                <button type="button" class="btn btn-success">編集する</button>
              <% end %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>





  </div>
</main>