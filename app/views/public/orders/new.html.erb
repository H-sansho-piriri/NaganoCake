<div class="container">

  <div class="row">
    <div class="col-md-4">
      <h3>注文情報入力</h3>
    </div>

    <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
    <div class="col-md-10">
      <h4>支払い方法</h4>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
        <br>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>


      <h4>お届け先</h4>
        <div>
          <%= f.radio_button :address_number, 1 %>
          <%= f.label :address_number, "ご自身の住所" %>
          <div>
            〒<%= current_customer.postal_code %><%= current_customer.address %>
            <br>
            <%= current_customer.last_name %><%= current_customer.first_name %>
          </div>
        </div>

        <div>
          <%= f.radio_button :address_number, 2 %>
          <%= f.label :address_number, "登録済住所から選択" %>
          <br>
            <%= f.select :shipping_id, options_from_collection_for_select(Shipping.all, :id, :full_address) %>
        </div>

        <div class=>
          <%= f.radio_button :address_number, 3 %>
          <%= f.label :address_number, "新しいお届け先" %>
          <br>
          <!--住所入力欄-->
          <div class="form-group row">
            <%= f.label "郵便番号（ハイフンなし）", class: "col-md-4" %>
            <%= f.text_field :postal_code, class: "col-md-3" %>
          </div>
          <div class="form-group row">
            <%= f.label "住所", class: "col-md-4" %>
            <%= f.text_field :address, class: "col-md-7" %>
          </div>
          <div class="form-group row">
            <%= f.label "宛名", class: "col-md-4" %>
            <%= f.text_field :name, class: "col-md-3" %>
          </div>
        </div>
        <div class="col-md-6 offset-md-4">
          <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
        </div>
      <% end %>


