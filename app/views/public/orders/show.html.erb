<h6>注文履歴詳細</h6>
<div class="container">
  <div class="row">
    <div class="col">
      <p>注文情報</p>
      <table>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <!--データから入力-->
          <td>配送先</td>
          <td><%= @order.full_address %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col">
      <p>請求情報</p>
      <table>
        <!--各項目2段目はデータから入力-->
        <tr>
          <td>商品合計</td>
          <td><%= @order.total_price %></td>
        </tr>
        <tr>
          <td>配送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td>ご請求額</td>
          <td><%= @order.total_price + @order.postage %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p>注文内容</p>
      <table>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <!--以下データ入力-->
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.product.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.price * order_detail.quantity %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>