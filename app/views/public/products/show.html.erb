<div class="container-fluid">
  <div class="row">
    <div class="col-2 ml-3">
      <div class="border border-dark p-1">
        <h6 class="text-center">ジャンル検索</h6>
      </div>
      <div class="border border-dark p-3">
        <ul class="list-unstyled">
          <% @categories.each do |category| %>
          <li><%= category.name %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-3 mx-5">
      <div>
        <%= attachment_image_tag @product, :image, :fill, 200, 250, fallback: "no_image.jpg" %>
      </div>
    </div>

    <div class="col-5 mx-5">
      <h3 class="mb-3"><%= @product.name %></h3>
      <p><%= @product.caption %></p>
      <p><%= @product.price %></p>
      <%= form_with model: @cart_product, url: customers_cart_products_path, local:true do |f| %>
        <%= f.hidden_field :product_id, value: @product.id %>
      <div>
        <%= f.number_field :quantity, placeholder: "個数選択", min: 1, max: 30 %>
        <%= f.submit "カートに入れる", class: "btn btn-success" %>
      </div>
      <% end %>


    </div>

  </div>
</div>
