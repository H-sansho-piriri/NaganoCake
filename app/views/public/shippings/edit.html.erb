<div class="container">
  <div class="row">
    <h3 class="col-md-5">配送先編集</h2>
  </div>

  <%= form_with model:@shipping,url:"/customers/shippings/#{@shipping.id}", local:true do |f| %>
  <div class="col">
    <%= render "public/shared/error_messages", resource: @shipping %>
  </div>
    <div class="form-group row">
      <label for="" class="col-md-4 col-form-label">郵便番号（ハイフンなし）</label>

      <div class="col-md-4">
        <%= f.text_field :postal_code, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <label for="" class="col-md-4 col-form-label">住所</label>

      <div class="col-md-8">
        <%= f.text_field :address, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <label for="" class="col-md-4 col-form-label">宛名</label>

      <div class="col-md-4">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="col">
        <%= f.submit "変更内容を保存" , class: 'btn btn-success offset-md-2' %>
      </div>
    </div>
  <% end %>